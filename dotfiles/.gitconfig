[user]
  name = Rogerio
  email = github@rogeriosobrinho.me

[core]
  excludesfile = ~/.gitignore
  editor = vi

[init]
  defaultBranch = main

[alias]
  wow = log --all --graph --decorate --oneline --simplify-by-decoration
  c = !git add --all && git commit -m
  s = !git status -s
  l = !git log --pretty=format:'%C(blue)%h%C(red)%d %C(white)%s - %C(cyan)%cn, %C(green)%cr'

[color]
  ui = always
  diff = auto
  grep = auto
  interactive = auto
  status = auto
  branch = auto
  status = auto

[fetch]
  prune = true

[status]
  short = true

[color "diff"]
  meta = yellow bold
  commit = green bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse

[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = "red bold 52"
  newNormal = "green bold"
  newHighlight = "green bold 22"

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "status"]
  added = yellow
  changed = green
  untracked = cyan
